PORT=3001

# Environment Configuration
# APP_ENV: local | development | production
# - local: Uses localhost:3000 and local PostgreSQL database
# - development: Uses *.development.subago.cl and Prisma Accelerate
# - production: Uses *.subago.cl and Prisma Accelerate
#
# Note: We use APP_ENV instead of NODE_ENV for custom environment detection
APP_ENV=local

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Domain Configuration
ROOT_DOMAIN=subago.cl

# Database Configuration
# LOCAL ENVIRONMENT (APP_ENV=local)
# Connect to local PostgreSQL database
DATABASE_URL="postgresql://postgres:password@localhost:5433/local_subago"

# DEVELOPMENT/PRODUCTION ENVIRONMENTS (APP_ENV=development or production)
# Use Prisma Accelerate for connection pooling and caching
# PRISMA_DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY"
# DATABASE_URL="postgres://user:password@host:port/database?sslmode=require"

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here
JWT_ACCESS_EXPIRY_TIME=15m
JWT_ACCESS_EXPIRY_TIME_INT=900000
JWT_REFRESH_EXPIRY_TIME=7d

