{
  "extends": "../../tsconfig.base.json",
  "files": [],
  "references": [
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@suba-go/shared-validation": [
        "../../libs/shared-validation/src/index.ts"
      ],
      "@suba-go/shared-validation/*": ["../../libs/shared-validation/src/*"],
      "@suba-go/shared-components": ["libs/shared-components/src/index.ts"],
      "@suba-go/shared-components/*": ["../../libs/shared-components/src/*"],
      "@suba-go/shared-utils/*": ["../../libs/shared-utils/src/lib/*"],
      "@/*": ["src/*"]
    },
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2021"
  },
  "include": [
    "src/**/*.ts",
    "../../libs/shared-validation/src/**/*.ts",
    "typeorm.config.ts"
  ],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
