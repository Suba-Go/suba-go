{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "rootDir": "./src",
    "baseUrl": ".",
    "module": "commonjs",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "composite": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "../../libs/shared-validation/src/**/*.ts",
    "typeorm.config.ts"
  ],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
