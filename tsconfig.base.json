{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@suba-go/shared-components": ["libs/shared-components/src/index.ts"],
      "@suba-go/shared-components/*": ["libs/shared-components/src/*"],
      "@suba-go/shared-utils": ["libs/shared-utils/src/index.ts"],
      "@suba-go/shared-validation": ["libs/shared-validation/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
