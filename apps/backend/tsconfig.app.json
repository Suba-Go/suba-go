{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "baseUrl": ".",
    "module": "commonjs",
    "paths": {
      "@suba-go/shared-validation": ["../../libs/shared-validation/src"],
      "@suba-go/shared-validation/*": ["../../libs/shared-validation/src/*"],
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "composite": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "../../libs/shared-validation/src/**/*.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
