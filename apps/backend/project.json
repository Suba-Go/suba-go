{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --project apps/backend/tsconfig.app.json --noEmit --pretty",
        "cwd": "."
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/backend"],
      "options": {
        "command": "tsc --project apps/backend/tsconfig.app.json --outDir dist/apps/backend",
        "cwd": "."
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nodemon",
        "cwd": "apps/backend"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/backend/**/*.{ts,tsx,js,jsx}"],
        "config": "eslint.build.config.mjs"
      }
    }
  }
}
