{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@suba-go/shared-validation": [
        "../../libs/shared-validation/src/index.ts"
      ],
      "@suba-go/shared-components": [
        "../../libs/shared-components/src/index.ts"
      ],
      "@suba-go/shared-components/*": ["../../libs/shared-components/src/*"],
      "@suba-go/shared-utils/*": ["../../libs/shared-utils/src/lib/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../apps/frontend/.next/types/**/*.ts",
    "../../dist/apps/frontend/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "../../libs/shared-components/src/**/*.ts",
    "../../libs/shared-components/src/**/*.tsx",
    "src/types/env.d.ts",
    "../../libs/shared-components/src/types/env.d.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", ".next/**/*"]
}
